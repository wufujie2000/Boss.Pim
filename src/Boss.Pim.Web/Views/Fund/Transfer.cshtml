@{
    Layout = "~/Views/Shared/_BootstrapLayout.cshtml";
    ViewBag.Title = "添加转换记录";
}
<form class="form-horizontal" action="/Fund/TransferPost" method="post">
    <div class="form-group">
        <label for="FundCode" class="col-sm-2 control-label">基金编码</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="FundCode" name="FundCode" value='@Request["fundCode"]'>
        </div>
    </div>
    <div class="form-group">
        <label for="Time" class="col-sm-2 control-label">时间</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" id="Time" name="Time" value="@DateTime.Now.Date">
        </div>
    </div>
    <div class="form-group">
        <label for="Portion" class="col-sm-2 control-label">份额</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="Portion" name="Portion" value="5000" step="0.01">
        </div>
    </div>
    <div class="form-group">
        <label for="FromServiceRate" class="col-sm-2 control-label">卖出费率</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="FromServiceRate" name="FromServiceRate" value="0.15" step="0.01">
        </div>
    </div>
    <div class="form-group">
        <label for="ServiceRate" class="col-sm-2 control-label">买入费率</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="ToServiceRate" name="ToServiceRate" value="0.15" step="0.01">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">提交</button>
        </div>
    </div>
</form>