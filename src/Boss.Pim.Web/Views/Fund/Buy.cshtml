@{
    Layout = "~/Views/Shared/_BootstrapLayout.cshtml";
    ViewBag.Title = "添加买入记录";
}
<form class="form-horizontal" action="/Fund/BuyPost" method="post">
    <div class="form-group">
        <label for="FundCode" class="col-sm-2 control-label">基金编码</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="FundCode" name="FundCode" value='@Request["fundCode"]'>
        </div>
    </div>
    <div class="form-group">
        <label for="Time" class="col-sm-2 control-label">时间</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" id="Time" name="Time" value="2018-02-14">
        </div>
    </div>
    <div class="form-group">
        <label for="Amount" class="col-sm-2 control-label">金额</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="Amount" name="Amount" value="1000" step="0.01">
        </div>
    </div>
    <div class="form-group">
        <label for="ServiceRate" class="col-sm-2 control-label">费率</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="ServiceRate" name="ServiceRate" value="0.15" step="0.01">
        </div>
    </div>
    <div class="form-group">
        <label for="TradeType" class="col-sm-2 control-label">类型</label>
        <div class="col-sm-10">
            <select id="TradeType" name="TradeType">
                <option value="0">买入</option>
                <option value="2">转入</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">提交</button>
        </div>
    </div>
</form>